{
  "name": "tendertracker-frontend",
  "version": "1.0.0",
  "description": "AngularJS frontend for TenderTracker system",
  "main": "src/app/app.js",
  "scripts": {
    "prepare-libs": "node prepare-libs.js",
    "prestart": "npm run prepare-libs",
    "start": "http-server src -p 3000 -c-1 -P http://localhost:5000",
    "start:proxy": "http-server src -p 3000 -c-1 --proxy proxy.conf.json",
    "build": "echo 'No build step required for AngularJS 1.x'",
    "test": "karma start karma.conf.js --single-run --browsers ChromeHeadless",
    "test:watch": "karma start karma.conf.js"
  },
  "dependencies": {
    "angular": "1.8.3",
    "bootstrap": "5.3.0",
    "bootstrap-icons": "^1.13.1",
    "jquery": "3.6.0",
    "rxjs": "6.6.7"
  },
  "devDependencies": {
    "angular-mocks": "^1.8.3",
    "fs-extra": "^11.3.3",
    "http-server": "14.1.1",
    "jasmine-core": "^6.0.1",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0"
  },
  "author": "TenderTracker Team",
  "license": "MIT"
}
